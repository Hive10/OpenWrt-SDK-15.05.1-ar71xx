menu "Extra packages"

	config PACKAGE_jose
		tristate "jose............................................................. jose v7"
		default y if DEFAULT_jose
		default m if ALL
		select PACKAGE_libpthread
		select PACKAGE_libssp if SSP_SUPPORT
		select PACKAGE_zlib
		select PACKAGE_jansson
		select PACKAGE_librt if USE_GLIBC
		select PACKAGE_libopenssl
		select PACKAGE_libc
		select PACKAGE_libpthread if USE_GLIBC
		help
		 José is a command line utility for performing various tasks on JSON
		 	Object Signing and Encryption (JOSE) objects. José provides a full
		 	crypto stack including key generation, signing and encryption.
		 https://github.com/latchset/jose
		 

endmenu

menu "Libraries"

menu "SSL"
	menuconfig PACKAGE_libopenssl
		tristate "libopenssl........................... Open source SSL toolkit (libraries)"
		default y if DEFAULT_libopenssl
		default m if ALL
		select PACKAGE_libssp if SSP_SUPPORT
		select PACKAGE_librt if USE_GLIBC
		select PACKAGE_zlib
		select PACKAGE_libc
		select PACKAGE_libpthread if USE_GLIBC
		help
		 The OpenSSL Project is a collaborative effort to develop a robust,
		 commercial-grade, full-featured, and Open Source toolkit implementing the Secure
		 Sockets Layer (SSL v2/v3) and Transport Layer Security (TLS v1) protocols as well
		 as a full-strength general purpose cryptography library.
		 This package contains the OpenSSL shared libraries, needed by other programs.
		 http://www.openssl.org/
		 


	source "feeds/base/package/libs/openssl/Config.in"

endmenu
